<div id="errors"></div>

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="d-flex flex-column align-items-center justify-content-center col-md-3">
            <%= display_book_image(@book["volumeInfo"]["imageLinks"], @book["volumeInfo"]["title"]) %>
        </div>
        <div class="col-md-9">
            <div class="card-body text-justify">
                <h5 class="card-title"><span class="font-weight-bold">Title: </span> <%= display_book_text(@book["volumeInfo"]["title"]) %> </h5>

                <p class="card-text"><span class="font-weight-bold">Rating: <span>
                    <% if !@book["volumeInfo"]["averageRating"].blank? %>
                        <% @book["volumeInfo"]["averageRating"].to_i.times do  %>
                            <span class="text-warning"><%= fa_icon 'star' %></span>
                        <% end %>    
                    <% else %>
                        None
                    <% end %>
                </p>

                <% if !@book["volumeInfo"]["authors"].blank? && @book["volumeInfo"]["authors"].any? %>
                    <p class="card-text"><span class="font-weight-bold">Author(s): </span>
                        <% @book["volumeInfo"]["authors"].each do |author| %>
                            <%= author %> 
                        <% end %>
                    </p>
                <% end %>

                <p class="card-text"><span class="font-weight-bold">Description: </span> <%= display_book_text(@book["volumeInfo"]["description"]) %> </p>

                <div class="d-flex justify-content-between">
                    <p class="card-text"><span class="font-weight-bold">Publisher: </span> <%= display_book_text(@book["volumeInfo"]["publisher"]) %> </p>
                    <p class="card-text"><span class="font-weight-bold">Published Date: </span> <%= display_book_text(@book["volumeInfo"]["publishedDate"])%></p>
                </div>

                <div class="d-flex flex-column justify-content-center align-items-center my-2">
                    <%= form_with(url: "/posts") do |f| %>
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <%= f.label :purchase_price, 'Pruchase price:', class: "form-label font-weight-bold" %>
                            </div>

                            <div class="col-sm-7">
                                <%= f.text_field :purchase_price, class: "form-control"%>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-5">
                                <%= f.label :sale_price, 'Sale price:', class: "form-label font-weight-bold" %>
                            </div>

                            <div class="col-sm-7">
                                <%= f.text_field :sale_price, class: "form-control"%>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-5">
                                <%= f.label :stock, 'Stock:', class: "form-label font-weight-bold" %>
                            </div>

                            <div class="col-sm-7">
                                <%= f.number_field :stock, class: "form-control"%>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <%= f.submit("Save", class:"btn btn-success mt-2")%>
                        </div>
                    <% end %>
                </div>

            </div>
        </div>
    </div>
</div>