<% if !@owned_books.blank? %>
  <% @owned_books.each do |owned_book| %>
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="d-flex flex-column align-items-center justify-content-center col-md-3">
          <img src=<%= owned_book[:image_link] %> alt=<%= owned_book[:title] %> class="img-fluid mt-4">
        </div>
        <div class="col-md-9 align-self-center">
          <div class="card-body text-justify">
            <div class="d-flex flex-column align-self-center">
              <h5 class="card-title"><span class="font-weight-bold">Title: </span> <%= owned_book[:title] %> </h5>
              <%= render 'books/partials/rating', obj:owned_book[:average_rating]%>
              <%= render 'books/partials/authors', obj: author_names(owned_book.authors) %>
              <p class="card-text"><span class="font-weight-bold mr-2">Price: </span> <%= number_to_currency(owned_book[:sale_price]) %></p>
              <div class="d-flex justify-content-center">
                <%= link_to 'View', book_path(owned_book), class: "btn btn-success"%>
              </div>
            </div>
          </div>
        </div>
      </div>  
    </div>
  <% end %>
  <% if will_paginate @owned_books %>
    <div class="flickr_pagination mb-4">
        <%= will_paginate @owned_books, :container => false %>
    </div>
  <% end %>
<% else %>
  <%= render 'shared/nothing_found' %>
<% end %>