<% if !@friends.blank? && @friends.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col text-center">Full Name</th>
      <th scope="col text-center">Email</th>
      <th scope="col text-center" colspan = "2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
        <tr class="my-3">
            <td><%= friend.fullname %></td>
            <td><%= friend.email %></td>
            <td><%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success' %></td>
            <% if current_user.not_friends_with?(friend.id) %>
                <td><%= link_to 'Follow friend?', friendships_path(friend: friend), class: 'btn btn-sm btn-success', method: :post %></td>
            <% else %>
                <td>
                <span class="badge badge-secondary">
                    You are friends
                </span>
                </td>
            <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
<% else %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        Nothing found 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>