<div class="card-body d-flex flex-column">
    <%= form_with(model: @address, local: true, url:address_path) do |f| %>

        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :address_line_1,'Address line 1:', class: "form-label font-weight-bold" %>
            </div>

            <div class="col-sm-10">
                <%= f.text_field :address_line_1, class: "form-control"%>
            </div>
        </div>
    
    <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :address_line_2, 'Address line 2:', class: "form-label font-weight-bold" %>
            </div>

            <div class="col-sm-10">
                <%= f.text_field :address_line_2, class: "form-control"%>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :city, 'City:', class: "form-label font-weight-bold" %>
            </div>

            <div class="col-sm-10">
                <%= f.text_field :city, class: "form-control"%>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :state_or_province, 'State or province:', class: "form-label font-weight-bold" %>
            </div>

            <div class="col-sm-10">
                <%= f.text_field :state_or_province, class: "form-control"%>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :postal_code, 'Postal code: ', class: "form-label font-weight-bold" %>
            </div>

            <div class="col-sm-10">
                <%= f.text_field :postal_code, class: "form-control"%>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :telephone, 'Telephone:', class: "form-label font-weight-bold" %>
            </div>

            <div class="col-sm-10">
                <%= f.telephone_field :telephone, class: "form-control"%>
            </div>
        </div>

        <div class="text-center">
            <%= f.submit(@address.blank? ? "Save address" : "Update address", class: "btn btn-success")%>
        </div>
    <% end %>
</div>
<%= render 'shared/form_errors', obj: @address %>
